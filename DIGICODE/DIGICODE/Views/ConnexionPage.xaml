<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DIGICODE.Views.ConnexionPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="déconnexion" Clicked="deco_Clicked">
            <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="UWP" Value="add.png"/>
                </OnPlatform>
            </ToolbarItem.Icon>
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    
      <StackLayout>
        <Label Text="Connexion" TextColor="black" FontSize="20"></Label>
        <Entry x:Name="email" Placeholder="Login" WidthRequest="150"></Entry>
        <Entry x:Name="motdepasse" Placeholder="Mot de passe" WidthRequest="150" IsPassword="true"></Entry>
        <Button BackgroundColor="Gray" TextColor="White" Text="connexion" Clicked="OnConnexion"/>

    </StackLayout>

</ContentPage>